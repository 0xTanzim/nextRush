{
  "name": "litepress",
  "version": "1.0.0",
  "description": "A lightweight, fast, and modern HTTP server framework for Node.js with TypeScript support and Express-like API.",
  "keywords": [
    "typescript",
    "http",
    "server",
    "framework",
    "express",
    "lightweight",
    "backend",
    "routing",
    "api",
    "fast",
    "modern",
    "zero-dependencies"
  ],
  "homepage": "https://github.com/0xTanzim/litepress#readme",
  "bugs": {
    "url": "https://github.com/0xTanzim/litepress/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xTanzim/litepress.git"
  },
  "license": "MIT",
  "author": "Tanzim Hossain <tanzimhossain2@gmail.com>",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "examples",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev src/index.ts",
    "example": "ts-node-dev examples/basic.ts",
    "example:router": "ts-node-dev src/router-example.ts",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm test",
    "test": "echo \"No test specified\" && exit 0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.13.1"
}
